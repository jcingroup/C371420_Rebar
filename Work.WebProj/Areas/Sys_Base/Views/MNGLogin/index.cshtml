<body class="login" ng-app="angularApp">

    <div id="container" ng-controller="ctrl">

        <div id="main">

            <h1 class="logo"><span>@Resources.Res.System_Name</span><em>【石化業管理端】</em></h1>

            <div class="login-box">

                <h3>@Html.Lang("systemlogin")</h3>

                <form ng-submit="submit()">

                    <div class="form-group">
                        <label class="col-xs-4 control-label">@Html.Lang("account") Username</label>
                        <div class="col-xs-8">
                            <input class="form-control"
                                   type="text"
                                   tabindex="1"
                                   placeholder="@Html.Lang("account")"
                                   ng-model="fd.account"
                                   required />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-xs-4 control-label">@Html.Lang("password") Password</label>
                        <div class="col-xs-8">
                            <input class="form-control"
                                   type="password"
                                   tabindex="2"
                                   placeholder="@Html.Lang("password")"
                                   ng-model="fd.password"
                                   required />
                        </div>
                    </div>

                    @*<div class="form-group">
                            <label class="col-xs-4 control-label">語系 Language</label>
                            <div class="col-xs-8">
                                <select class="form-control"
                                        tabindex="-1"
                                        ng-model="fd.lang"
                                        ng-options="m.lang as m.area for m in options_lang"
                                        ng-required="true" />
                                </select>
                            </div>
                        </div>*@

                    <div class="form-group">
                        <label class="col-xs-4 control-label">驗證碼 Check</label>
                        <div class="col-xs-4">
                            <input class="form-control"
                                   type="text"
                                   tabindex="3"
                                   capitalize
                                   required
                                   placeholder="@Html.Lang("vildate")"
                                   ng-model="fd.img_vildate" />
                        </div>
                        <div class="col-xs-4">
                            <img ng-src="{{vial_img_path}}" alt="@Html.Lang("vildate_memo")" />
                        </div>
                        @*<div class="col-xs-3">
                                <button class="btn-warning" type="button" tabindex="-1" ng-click="revildate()"><i class="fa-refresh"></i> @Html.Lang("revildate")</button>
                            </div>*@
                    </div>

                    <div class="form-action">
                        <div class="col-xs-8 col-xs-offset-4">
                            <button class="login-btn" tabindex="4" type="submit">
                                <i class="fa-key"></i> @Html.Lang("login")
                            </button>
                        </div>
                    </div>

                    @*<p class="send">
                            <span class="col-xs-4">
                            <label>
                                <input type="checkbox" tabindex="-1" ng-model="fd.rememberme" />
                                <i class="fa-check"></i>
                            </label>
                            @Html.Lang("remember")
